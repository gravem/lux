<div class="container">
<h1><%= current_user.first_name %>'s cars</h1>
<%= link_to "Add a new car", new_car_path, class: 'btn btn-outline-light mb-4' %>

<div class="row col-12 align-items-center">
  <div class="flex-row">
    <% @cars.each do |car| %>
      <div class="card-product mb-4">
        <div class="card-product-img dark-card-color">
          <%= link_to car_path(car), class: "text-decoration-none" do %>
            <%= cl_image_tag car.photo.key, class: '' %>
          <% end %>
        </div>

        <div class="d-flex justify-content-between align-items-center w-100">

          <div class="card-product-infos">
            <h2><%= car.brand %> | <%= car.model %></h2>
            <p><%= car.description %></p>
          </div>

          <div class="mx-4">
            <%= link_to "Edit details", edit_car_path(car), class: 'btn btn-outline-light d-block mb-2' %>
            <%= link_to "Delete this car", car_path(car),
                data: {turbo_method: :delete,
                turbo_confirm: "Are you sure?"},
                class: 'btn btn-outline-secondary d-block' %>
          </div>
        </div>

      </div>
    <% end %>
  </div>
</div>
