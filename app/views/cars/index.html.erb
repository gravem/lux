<div class="container">
<h1>All Cars</h1>

<%= form_with url: cars_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a car"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<div>
  <%= render 'pages/car_card', cars: @cars %>
</div>
<%= link_to "New Car", new_car_path  %>
</div>
