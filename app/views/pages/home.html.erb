<div class="mt-3">
  <div class="row justify-content-center">
    <div class="row col-12">
      <h1>LuxCar Rental 4 Lyfe</h1>
    </div>
    <div class="row col-12">
      <p>Welcome to our Luxury Car hire site where we realise your dreams of driving a car that's far too expensive around for a day and then giving it back and being charged far more than you initially planned</p>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="row col-12 justify-content-center">
      <a href="cars/#id" class="text-decoration-none">
        <h2 class="text-primary">All our LuxCars</h2>
      </a>
    </div>
  </div>
  <div class="row">
    <% @cars.each do |car|%>
      <div class="col">
        <a href="<%= car_path(car) %>" class="text-decoration-none">
          <div class="card">
            <div class="card-body d-flex flex-column">
              <div class="d-flex justify-content-between">
                <div>
                  <h5 class="card-title"><%= "#{car.brand} #{car.model}" %></h5>
                </div>
                <div>
                  <h5 class="card-title text-right">Price</h5>
                </div>
              </div>
              <p class="card-text mt-3"><%= car.description %></p>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>
